@prefix agento: <http://example.org/agento#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix mastra: <http://example.org/mastraai#> .

# Classes
agento:System a rdfs:Class ;
    rdfs:label "System" ;
    rdfs:comment "Represents a multi-agent system or pattern context." .

agento:Agent a rdfs:Class ;
    rdfs:label "Agent" ;
    rdfs:comment "An agent executing a role or task in the system." .

agento:LLMModel a rdfs:Class ;
    rdfs:label "LLMModel" ;
    rdfs:comment "Represents the LLM model used by an agent." .

agento:Workflow a rdfs:Class ;
    rdfs:label "Workflow" ;
    rdfs:comment "Represents a high-level workflow within the multi-agent system." .

# Object Properties
agento:hasAgent a rdf:Property ;
    rdfs:domain agento:System ;
    rdfs:range agento:Agent ;
    rdfs:comment "Connects the system/pattern to its configured agents." .

agento:configuredBy a rdf:Property ;
    rdfs:domain agento:Agent ;
    rdfs:range agento:LLMModel ;
    rdfs:comment "Indicates that an agent is configured using a specific LLM model." .

agento:hasWorkflow a rdf:Property ;
    rdfs:domain agento:System ;
    rdfs:range agento:Workflow ;
    rdfs:comment "Connects the system/pattern to its workflows." .

# Datatype Properties
agento:role a rdf:Property ;
    rdfs:domain agento:Agent ;
    rdfs:range xsd:string ;
    rdfs:comment "Each agent declares a functional role." .

agento:instructions a rdf:Property ;
    rdfs:domain agento:Agent ;
    rdfs:range xsd:string ;
    rdfs:comment "Contains the instructions guiding agent behavior." .

agento:modelName a rdf:Property ;
    rdfs:domain agento:LLMModel ;
    rdfs:range xsd:string ;
    rdfs:comment "Specifies the LLM model used by each agent." .

agento:workflowDescription a rdf:Property ;
    rdfs:domain agento:Workflow ;
    rdfs:range xsd:string ;
    rdfs:comment "Describes the purpose or function of the workflow." .

# Optional Properties
agento:vendorClass a rdf:Property ;
    rdfs:domain agento:Agent ;
    rdfs:range xsd:string ;
    rdfs:comment "Allows cross-framework mapping of class names." .

# Instances
mastra:customerSupportSystem a agento:System ;
    agento:hasAgent mastra:supportAgent, mastra:escalationAgent ;
    agento:hasWorkflow mastra:supportFlow ;
    rdfs:label "Customer Support System" .

mastra:supportAgent a agento:Agent ;
    agento:role "Support Agent"^^xsd:string ;
    agento:instructions "Handle customer inquiries"^^xsd:string ;
    agento:configuredBy mastra:gpt4 .

mastra:escalationAgent a agento:Agent ;
    agento:role "Escalation Specialist"^^xsd:string ;
    agento:instructions "Handle complex issues"^^xsd:string ;
    agento:configuredBy mastra:gpt4 .

mastra:gpt4 a agento:LLMModel ;
    agento:modelName "gpt-4"^^xsd:string .

mastra:supportFlow a agento:Workflow ;
    agento:workflowDescription "Customer support workflow"^^xsd:string ;
    rdfs:label "support_flow" .
